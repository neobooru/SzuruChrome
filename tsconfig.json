{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      {
        "transform": "ts-optchain/transform"
      }
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
